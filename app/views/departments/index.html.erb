<% if current_user.role.role_name.downcase != "supervisor"%>
<h1>Access Denied</h1>
<%else%>


<div class="page-header">
  <h1>
    Departments
    <a href="/departments/new" class="btn btn-lg btn-success">New Department</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Department name</th>
        <th>Actions</th>
      </tr>

      <% @departments.each do |department| %>
      <tr>
        <td><%= department.department_name %></td>
        <td>
          <a href="/departments/<%= department.id %>" class="btn btn-primary">Show</a>
          <a href="/departments/<%= department.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_department/<%= department.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<%end%>
