<% if current_user.role.role_name.downcase != "supervisor"%>
<h1>Access Denied</h1>
<%else%>

<div class="page-header">
  <h1>
    Requests
    <a href="/requests/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Allotment</th>
        <th>Length</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td><%= request.user_id %></td>
        <td><%= request.allotment_id %></td>
        <td><%= request.length %></td>
        <td><%= request.request_type %></td>
        <td>
          <a href="/requests/<%= request.id %>" class="btn btn-primary">Show</a>
          <a href="/requests/<%= request.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<%end%>
