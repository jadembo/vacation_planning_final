<div class = "page-header">
  <h3> My Requests </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Length</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td><%= request.allotment.date.strftime("%a %D") %></td>
        <td><%= request.length.titlecase %></td>
        <td><%= request.request_type.titlecase %></td>
        <td>
          <a href="/delete_request/<%= request.id %>" class="btn btn-danger" rel="nofollow">Give Back Day</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
