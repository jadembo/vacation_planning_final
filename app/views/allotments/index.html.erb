<% if current_user.role.role_name.downcase != "supervisor"%>
<h1>Access Denied</h1>
<%else%>

<div class="page-header">
  <h1>
    Allotments
    <a href="/allotments/new" class="btn btn-lg btn-success">New Allotment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Days available</th>
        <th>Role</th>
        <th>Department</th>
        <th>Actions</th>
      </tr>

      <% @allotments.each do |allotment| %>
      <tr>
        <td><%= allotment.date.strftime("%a %D") %></td>
        <td><%= allotment.days_available %></td>
        <td><%= allotment.role.role_name %></td>
        <td><%= allotment.department.department_name%></td>
        <td>
          <a href="/allotments/<%= allotment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_allotment/<%= allotment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<%end%>
